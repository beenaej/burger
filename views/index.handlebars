<div class="jumbotron text-center">
  <h1>Eat-Da-Burger!</h1>
<br> 
  <div class="row">
		<div class="col-md-12" align="center">
		
			<form action="/burgers" method="POST">
				<input type="text" id="name" name="burger_name" placeholder="Yummy Burger">
				<button type="submit" class="addBurgerButton">Add the Burger</button>
			</form>
		</div>
	</div>
	<br>

  <p>Enter a burger you want to eat! Click the "Submit" button!</p> 
</div>


<main>
	<div class="container">
		<div class="row">
			<div class="col-sm-6">
				{{#each burgers}}
					{{#unless this.devoured}}
			<div>
				<form action="/burgers/{{this.id}}?_method=PUT" method="POST">
				{{this.burger_name}}
					<button type="submit" class="burgerAvailable">Devour it!
					</button>
				</form>
				<br>
			</div>
		{{/unless}}
	{{/each}}
	</div>

			<div class="col-sm-6">
				{{#each burgers}}
					{{#if this.devoured}}
						<div class="burgerEaten">
							<div>
							{{this.burger_name}}
							</div>
						</div>
					{{/if}}
				{{/each}}
			</div>
		</div>
	</div>
</main>

			